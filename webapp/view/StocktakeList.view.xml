<mvc:View
	controllerName="dyflex.mm.s4cloud.warehouse.controller.StocktakeList"
	xmlns="sap.m"
	xmlns:ndc="sap.ndc"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>stocktakeListTitle}" level="H2"/>
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="idStocktakeListTable"
				width="auto"
				items="{
					path: 'physInvDocSrv>/A_PhysInventoryDocItem',
					sorter: [
						{ path: 'PhysicalInventoryDocument', descending: true, group: true },
						{ path: 'FiscalYear', descending: true, group: true },
						{ path: 'PhysicalInventoryDocumentItem', descending: false }
					],
					groupHeaderFactory: '.onGroupHeader'
				}"
				noDataText="{listView>/tableNoDataText}"
				busyIndicatorDelay="{listView>/tableBusyDelay}"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<OverflowToolbar>
						<Title
							text="{listView>/listTableTitle}"
							level="H3"/>
						<ToolbarSpacer />
						<SearchField
							fieldGroupIds="idSearchFieldGrp"
							search="onSearch">
							<layoutData>
								<OverflowToolbarLayoutData
									maxWidth="150px"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						<ndc:BarcodeScannerButton
							scanSuccess="onScanSuccess"
							scanFail="onScanError"
							dialogTitle="Barcode Scanner" >
						</ndc:BarcodeScannerButton>
					</OverflowToolbar>
				</headerToolbar>

				<columns>
					<Column width="auto" >
						<Text text="Item" />
					</Column>
					<Column width="auto" >
						<Text text="Material" />
					</Column>
					<Column width="auto" >
						<Text text="Plant" />
					</Column>
					<Column width="20%" minScreenWidth="Tablet" demandPopin="true">
						<Text text="Storage Location" />
					</Column>
					<Column width="15%" minScreenWidth="Desktop" demandPopin="true">
						<Text text="Batch" />
					</Column>
				</columns>

				<items>
					<ColumnListItem type="Navigation" press="onPress">
						<cells>
							<ObjectIdentifier title="{physInvDocSrv>PhysicalInventoryDocumentItem}" />
							<ObjectIdentifier title="{physInvDocSrv>Material}" />
							<ObjectIdentifier title="{physInvDocSrv>Plant}" />
							<ObjectIdentifier title="{physInvDocSrv>StorageLocation}" />
							<ObjectIdentifier title="{physInvDocSrv>Batch}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		
		<semantic:titleCustomIconActions>
			<OverflowToolbarButton icon="sap-icon://menu" text="Menu" press="onPressMenu" />
		</semantic:titleCustomIconActions>
		
		<semantic:sendEmailAction>
			<semantic:SendEmailAction press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton title="{listView>/saveAsTileTitle}" />
		</semantic:saveAsTileAction>

	</semantic:SemanticPage>
	
</mvc:View>