<mvc:View
	controllerName="dyflex.mm.s4cloud.warehouse.controller.GoodsReceiptDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:upload="sap.m.upload"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		headerPinnable="true"
		toggleHeaderOnTitleClick="true"
		showFooter="true"
		busy="{viewModel>/busy}"
		busyIndicatorDelay="{viewModel>/delay}">

		<semantic:titleHeading>
			<Title level="H2" >
				<Link text="{viewModel>/purchaseOrder}" press="onPurchaseOrderLinkPress(${viewModel>/purchaseOrder})" />
			</Title>
		</semantic:titleHeading>
		
		<semantic:headerContent>
			<ObjectAttribute title="Supplier" text="{supplierModel>/d/SupplierName} ({supplierModel>/d/Supplier})" />
		</semantic:headerContent>

		<semantic:content>
			<VBox >
				<Panel>
		
					<f:SimpleForm
						id="idHeaderForm"
						class="editableForm"
						columnsL="1"
						columnsM="1"
						editable="true"
						emptySpanL="3"
						emptySpanM="2"
						labelSpanL="3"
						labelSpanM="3"
						adjustLabelSpan="false"
						layout="ResponsiveGridLayout"
						maxContainerCols="2"
						minWidth="1024">
						<f:content>
							
							<Label text="Document Date" />
							<DatePicker
								id="idDocumentDate"
								required="true"
								change="onChanged"
								dateValue="{createModel>/DocumentDate}"
								displayFormat="dd.MM.yyyy" />
								
							<Label text="Posting Date" />
							<DatePicker
								id="idPostingDate"
								required="true"
								change="onChanged"
								dateValue="{createModel>/PostingDate}"
								displayFormat="dd.MM.yyyy" />
							
							<Label text="Printing" />
							<ComboBox selectedKey="{createModel>/VersionForPrintingSlip}" >
								<items>
									<core:Item key="0" text="No Print" />
									<core:Item key="1" text="Individual Slip" />
									<core:Item key="2" text="Individual Slip with Inspection Text" />
									<core:Item key="3" text="Collective Slip" />
								</items>
							</ComboBox>
							
							<Label text="Delivery Note" />
							<Input
								value="{createModel>/ReferenceDocument}"
								change="onChanged"
								required="true" />
							
							<Label text="Header Text" />
							<Input value="{createModel>/MaterialDocumentHeaderText}" />
							
						</f:content>
					</f:SimpleForm>
				</Panel>
				
				<core:Fragment fragmentName="dyflex.mm.s4cloud.warehouse.view.GoodsReceiptItems" type="XML" />
				
				<core:Fragment fragmentName="dyflex.mm.s4cloud.warehouse.view.Attachments" type="XML" />
				
			</VBox>
		</semantic:content>
		
		<semantic:titleCustomIconActions>
			<OverflowToolbarButton icon="sap-icon://menu" text="Menu" press="onPressMenu" />
		</semantic:titleCustomIconActions>
		
		<semantic:sendEmailAction>
			<semantic:SendEmailAction press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton title="{viewModel>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
		
		<semantic:footerMainAction>
			<semantic:FooterMainAction text="Post" press="onPost" enabled="{viewModel>/enableSave}" />
		</semantic:footerMainAction>
		
		<semantic:footerCustomActions>
			<Button text="Cancel" press="onCancel" />
		</semantic:footerCustomActions>
		
	</semantic:SemanticPage>

</mvc:View>