<mvc:View
	controllerName="dyflex.mm.s4cloud.warehouse.controller.GoodsReceiptDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		headerPinnable="true"
		toggleHeaderOnTitleClick="true"
		showFooter="true"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">

		<semantic:titleHeading>
			<Title text="{= ${orderModel>/d/Material} !== '' ? ${orderModel>/d/Material} : ${orderModel>/d/PurchaseOrderItemText} }" level="H2"/>
		</semantic:titleHeading>
		
		<semantic:titleSnappedContent>
			<Text text="{orderModel>/d/PurchaseOrderItemText}" visible="{= ${orderModel>/d/Material} !== '' }"/>
		</semantic:titleSnappedContent>

		<semantic:titleExpandedContent>
			<Text text="{orderModel>/d/PurchaseOrderItemText}" visible="{= ${orderModel>/d/Material} !== '' }"/>
		</semantic:titleExpandedContent>
		
		<semantic:headerContent>
			<ObjectAttribute title="Plant" text="{plantDesc>/PlantName} ({orderModel>/d/Plant})" />
		</semantic:headerContent>

		<semantic:content>
			<f:SimpleForm
				class="editableForm"
				columnsL="1"
				columnsM="1"
				editable="true"
				emptySpanL="3"
				emptySpanM="2"
				labelSpanL="3"
				labelSpanM="3"
				adjustLabelSpan="false"
				layout="ResponsiveGridLayout"
				maxContainerCols="2"
				minWidth="1024">
				<f:content>
					
					<Label text="Storage Location" />
					<ComboBox
						id="idStoreLoc"
						selectedKey="{orderModel>/d/StorageLocation}"
						items="{
							path: 'stockModel>/d/results',	
							sorter: { path: 'StorageLocationName' }	
						}">
						<core:ListItem key="{stockModel>StorageLocation}" text="{stockModel>StorageLocationName} ({stockModel>StorageLocation})" />	
					</ComboBox>
					
					<Label text="Receiving Qty" required="true" />
					<Input
						id="idReceiveQty"
						value="{orderModel>/d/OrderQuantity}"
						type="Number" />
					
				</f:content>
			</f:SimpleForm>
		</semantic:content>
		
		<semantic:titleCustomIconActions>
			<OverflowToolbarButton icon="sap-icon://menu" text="Menu" press="onPressMenu" />
		</semantic:titleCustomIconActions>
		
		<semantic:sendEmailAction>
			<semantic:SendEmailAction press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton title="{detailView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
		
		<semantic:footerMainAction>
			<semantic:FooterMainAction press="onShareEmailPress" />
		</semantic:footerMainAction>
		
		<semantic:footerCustomActions>
			<Button text="Cancel" />
		</semantic:footerCustomActions>
		
	</semantic:SemanticPage>

</mvc:View>