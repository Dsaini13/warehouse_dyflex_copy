<mvc:View
	controllerName="dyflex.mm.s4cloud.warehouse.controller.GoodsReceiptDetail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:upload="sap.m.upload"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		headerPinnable="true"
		toggleHeaderOnTitleClick="true"
		showFooter="true"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">

		<semantic:titleHeading>
			<Title text="{orderModel>/d/PurchaseOrder}" level="H2"/>
		</semantic:titleHeading>
		
		<semantic:headerContent>
			<ObjectAttribute title="Supplier" text="{supplierModel>/d/SupplierName} ({orderModel>/d/Supplier})" />
		</semantic:headerContent>

		<semantic:content>
			<VBox >
				<Panel>
					<f:SimpleForm
						class="editableForm"
						columnsL="1"
						columnsM="1"
						editable="true"
						emptySpanL="3"
						emptySpanM="2"
						labelSpanL="3"
						labelSpanM="3"
						adjustLabelSpan="false"
						layout="ResponsiveGridLayout"
						maxContainerCols="2"
						minWidth="1024">
						<f:content>
							
							<Label text="Delivery Note" required="true" />
							<Input />
							
							<Label text="Comments" />
							<TextArea maxLength="200" />
							
						</f:content>
					</f:SimpleForm>
				</Panel>
				
				<core:Fragment fragmentName="dyflex.mm.s4cloud.warehouse.view.GoodsReceiptItems" type="XML" />
				
				<core:Fragment fragmentName="dyflex.mm.s4cloud.warehouse.view.Attachments" type="XML" />
				
			</VBox>
		</semantic:content>
		
		<semantic:titleCustomIconActions>
			<OverflowToolbarButton icon="sap-icon://menu" text="Menu" press="onPressMenu" />
		</semantic:titleCustomIconActions>
		
		<semantic:sendEmailAction>
			<semantic:SendEmailAction press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton title="{detailView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
		
		<semantic:footerMainAction>
			<semantic:FooterMainAction text="Post" press="onPost" />
		</semantic:footerMainAction>
		
		<semantic:footerCustomActions>
			<Button text="Cancel" press="onCancel" />
		</semantic:footerCustomActions>
		
	</semantic:SemanticPage>

</mvc:View>