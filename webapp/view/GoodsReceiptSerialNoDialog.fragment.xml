<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:ndc="sap.ndc"
	xmlns:core="sap.ui.core" >
	
	<Dialog
		title="Serial No"
		contentWidth="40%"
		draggable="true">
		
		<Table
			items="{ 
				path: 'itemModel>/to_SerialNumbers/results', 
				templateShareable: false }"
			width="auto"
			fixedLayout="false"
			class="sapUiResponsiveMargin">
			
			<headerToolbar>
				<OverflowToolbar>
					<ToolbarSpacer />
					<SearchField
						fieldGroupIds="idSearchFieldGrp"
						placeholder="Scan"
						search="onSerialNoScan">
						<layoutData>
							<OverflowToolbarLayoutData
								maxWidth="150px"
								priority="NeverOverflow"/>
						</layoutData>
					</SearchField>
					<ndc:BarcodeScannerButton
						scanSuccess="onScanSuccess"
						scanFail="onScanError"
						dialogTitle="Barcode Scanner" >
					</ndc:BarcodeScannerButton>
				</OverflowToolbar>
			</headerToolbar>
			
			<columns>
				<Column width="auto">
					<Text text="Serial No" />
				</Column>
				<Column width="60px" />
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{itemModel>SerialNumber}" />
						
						<Button
							icon="sap-icon://delete"
							tooltip="Delete item"
							press="onSerialNoDelete" />
					</cells> 
				</ColumnListItem>
			</items>
		</Table>
		
		<beginButton>
			<Button text="Apply" type="Emphasized" press="onSerialNoApply" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onSerialNoCancel" />
		</endButton>
		
	</Dialog>
	
</core:FragmentDefinition>