<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	
	<Table 
		items="{ 
			path: 'createModel>/d/results', 
			sorter: [
				{ path: 'WarehouseStorageBin', descending: false },
				{ path: 'Material', descending: false }
			],
			templateShareable: false }"
		width="auto"
		fixedLayout="false"
		class="sapUiSmallMarginTopBottom"
		noDataText="{i18n>tableNoDataText}">
		<headerToolbar>
			<Toolbar>
				<Title text="Items"/>
				<ToolbarSpacer/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Storage Bin"/>
			</Column>
			<Column>
				<Text text="Product"/>
			</Column>
			<Column>
				<Text text="Batch"/>
			</Column>
			<Column>
				<Text text="Count Qty"/>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{createModel>WarehouseStorageBin}"/>
					
					<ObjectIdentifier
						title="{createModel>Material}"
						text="{createModel>ProductName}"
						titleActive="true"
						titlePress="onMaterialLinkPress(${createModel>Material})" />
					
					<Text text="{createModel>Batch}"/>
					
					<Input
						value="{createModel>TempXXXX}"
						change="onChanged"
						fieldWidth="75%"
						description="{createModel>MaterialBaseUnit}"
						type="Number" />
					
					<HBox>
						<Button
							text="S/N"
							tooltip="Add serial number"
							class="sapUiSmallMarginEnd"
							enabled="{createModel>TempEnableSerialNo}"
							press="onSerialNoShow">
							<customData>
								<BadgeCustomData
									key="badge"
									value="{ path: 'createModel>to_SerialNumbers', formatter: '.formatter.serialNoBadge' }"/>
							</customData>
						</Button>
						<Button
							icon="sap-icon://delete"
							tooltip="Delete item"
							press="onDeleteItem" />
					</HBox>
							
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	
